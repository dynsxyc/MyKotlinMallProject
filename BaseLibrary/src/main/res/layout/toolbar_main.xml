<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mMainToolbarRl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#cccccc">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_header_bar_height"
        android:background="@color/colorPrimary">

        <com.flyco.roundview.RoundTextView
            android:id="@+id/mMainToolbarRvTvBack"
            style="@style/WrapMatchTextSize13.66"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true"
            android:drawableLeft="@drawable/icon_back"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:minWidth="50dp"
            app:rv_backgroundPressColor="@color/common_white_press" />

        <View
            android:id="@+id/mMainToolbarViewLine"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/mMainToolbarRvTvBack"
            android:background="@color/black"
            android:visibility="gone" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/mMainToolbarRvTvFinish"
            style="@style/WrapMatchTextSize13.66"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mMainToolbarViewLine"
            android:clickable="true"
            android:focusable="true"
            android:drawableLeft="@drawable/cha"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:minWidth="50dp"
            android:visibility="gone"
            app:rv_backgroundPressColor="@color/common_white_press" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/mMainToolbarRvTvLastRight"
            style="@style/WrapMatchTextSize13.66"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:drawableRight="@drawable/more"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:minWidth="50dp"
            android:visibility="gone"
            app:rv_backgroundPressColor="@color/common_white_press" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/mMainToolbarRvTvRight"
            style="@style/WrapMatchTextSize13.66"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/mMainToolbarRvTvLastRight"
            android:clickable="true"
            android:drawableRight="@drawable/more"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:minWidth="50dp"
            android:visibility="gone"
            app:rv_backgroundPressColor="@color/common_white_press" />

        <TextView
            android:id="@+id/mMainToolbarTvTitle"
            style="@style/MatchWrapTextSize15.33"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true" />
    </RelativeLayout>
</LinearLayout>



